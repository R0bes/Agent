{
  "apis": {
    "spotify": {
      "clientId": "your-spotify-client-id",
      "clientSecret": "your-spotify-client-secret",
      "enabled": false
    },
    "lastfm": {
      "apiKey": "your-lastfm-api-key",
      "enabled": false
    },
    "soundcloud": {
      "clientId": "your-soundcloud-client-id",
      "enabled": false
    }
  },
  "eventCrawler": {
    "enabledClubs": [],
    "crawlInterval": 60
  },
  "conversation": {
    "maxContextTokens": 8000,
    "maxHistoryMessages": 15,
    "memoryLimit": 12,
    "memoryKinds": ["fact", "preference", "summary", "episode"],
    "compactionTriggers": {
      "messageThreshold": 50,
      "tokenThreshold": 4000,
      "timeIntervalMinutes": 60
    }
  }
}

